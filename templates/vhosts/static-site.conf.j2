server {
{% include 'vhosts/common.server.j2' %}

  root {{ item.root }};

  location / {
    index {{ item.index }};
    try_files $uri {{ item.index }};

    {% if item.cors_enabled is defined and item.cors_enabled %}
      {% include 'vhosts/cors.location.j2' %}
    {% endif %}
  }

  location ~ ^.+\..+$ {
    try_files $uri =404;
  }

  {% if item.extra_config is defined %}
    {% for file in item.extra_config %}
      {% include file %}
    {% endfor %}
  {% endif %}
}
